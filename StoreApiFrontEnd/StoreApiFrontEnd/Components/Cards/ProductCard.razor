

<div class="card rounded-0 p-3 w-50" >
    <div class="d-flex justify-content-between align-items-center gap-3">
        <div class="flex-grow-1">
            <h5 class="card-title fw-bold mb-1">@Name</h5>
            <p class="card-text mb-2">@Description</p>
            <button id="ProductCardButtonBuy" type="button" class="btn btn-primary">Buy</button>
        </div>
        <div class="text-nowrap text-end">
            <p class="ProductCardPrice fw-semibold  mb-0" style="font-size: 1.1rem; margin-right:70px;">@Price</p>
        </div>
        <div class="flex-shrink-0">
            
        </div>
    </div>
</div>
@code {
    [Parameter] public string? Id { get; set; }

    [Parameter] public string? Name { get; set; }

    [Parameter] public string? Description { get; set; }

    [Parameter] public double? Price { get; set; }

 
}
